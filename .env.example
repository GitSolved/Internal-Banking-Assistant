# Internal Banking Assistant - Environment Variables Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to version control!

# ============================================================================
# AUTHENTICATION
# ============================================================================
# Required when server.auth.enabled = true in config/settings.yaml
# Generate with: python -c 'import base64, secrets; print("Basic " + base64.b64encode(f"admin:{secrets.token_urlsafe(32)}".encode()).decode())'
AUTH_SECRET=

# ============================================================================
# DATABASE CREDENTIALS
# ============================================================================
# PostgreSQL (required if vectorstore.database = postgres)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_SCHEMA=internal_assistant

# ClickHouse (required if vectorstore.database = clickhouse)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8443
CLICKHOUSE_USER=admin
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DB=embeddings

# ============================================================================
# EXTERNAL API KEYS (Optional - only if using external services)
# ============================================================================
# HuggingFace (optional - only needed for gated models)
HF_TOKEN=

# OpenAI (optional - only if llm.mode = openai)
OPENAI_API_KEY=

# Azure OpenAI (optional - only if llm.mode = azopenai)
AZ_OPENAI_API_KEY=
AZ_OPENAI_ENDPOINT=
AZ_OPENAI_EMBEDDING_DEPLOYMENT_NAME=
AZ_OPENAI_LLM_DEPLOYMENT_NAME=

# Google Gemini (optional - only if llm.mode = gemini)
GOOGLE_API_KEY=

# ============================================================================
# APPLICATION SETTINGS (Optional)
# ============================================================================
# Application environment (prod, dev, test)
APP_ENV=prod

# Server port
PORT=8001

# Enable local ingestion
LOCAL_INGESTION_ENABLED=true
